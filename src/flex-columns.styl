// Adds columns classes for flex block and items.
flex-columns($args...)
  
  for $count in $args
    $width = 1 / $count * 100%
    
    &&--columns-{$count} > &__item
      width $width
      
    &__item--size-{$count}
      width $width
      
    if $count - 1 > 1
      
      for $i in (1..$count - 1)
        $width = $i / $count * 100%
        
        &__item--size-{$i}-{$count}
          width $width